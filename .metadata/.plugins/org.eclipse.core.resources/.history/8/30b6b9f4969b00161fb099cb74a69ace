package Disparo;
import juego.*;
import mapa.Celda;
import javax.swing.*;

public abstract class Disparo extends ObjetoMovil{
	
	private ObjetoMovil tanque;
	private int direccion;
	
	public Disparo(Celda c, int x, int y,ObjetoMovil t){
		super(c,x,y);
		
		tanque = t;
		
		pos=3;
		
		
		grafico.setIcon(new ImageIcon(this.getClass().getResource("/sources/bala.png")));

		imagenes[0]= grafico.getIcon();
		imagenes[1]= grafico.getIcon();
		imagenes[2]= grafico.getIcon();
		imagenes[3]= grafico.getIcon();
		
		
		direccion = tanque.getDireccion();
		
	}
	
	public int getPos(){
		return pos;
	}
}
